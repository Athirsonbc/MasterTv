<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/full_overlay_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fullscreen player view is behind, we only place overlays here -->
    <FrameLayout
        android:id="@+id/overlay_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:layout_gravity="top">

        <TextView
            android:id="@+id/tvOverlayTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/mastertv_accent"
            android:textSize="22sp"
            android:text="Título do episódio" />

        <TextView
            android:id="@+id/tvOverlaySubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:textColor="#DDDDDD"
            android:textSize="14sp"
            android:text="Sinopse breve..." />
    </FrameLayout>

    <!-- Skip intro button (start-only) -->
    <Button
        android:id="@+id/btnSkipIntro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pular Intro"
        android:layout_margin="16dp"
        android:visibility="gone"
        android:layout_gravity="top|end"/>

    <!-- Next episode overlay (centered) -->
    <LinearLayout
        android:id="@+id/nextOverlay"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvNextLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Próximo episódio em 7s..."
            android:textSize="18sp"
            android:textColor="@color/mastertv_accent"/>

        <ImageView
            android:id="@+id/imgNextThumb"
            android:layout_width="220dp"
            android:layout_height="120dp"
            android:layout_marginTop="12dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tvNextTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Título próximo"
            android:textColor=\"#FFFFFF\"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnPlayNextNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ir para o próximo agora"
            android:layout_marginTop="12dp"/>
    </LinearLayout>

</FrameLayout>
